name: mlflow-diabetes-advanced
conda_env: conda.yaml

entry_points:
  main:
    parameters:
      data_path: {type: str, default: "diabetes_preprocessed_full.csv"}
      test_size: {type: float, default: 0.2}
      random_state: {type: int, default: 42}
    command: "python modelling.py --data-path {data_path} --test-size {test_size} --random-state {random_state}"